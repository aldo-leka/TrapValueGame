@namespace TrapValueGame.Components.Game
@implements IDisposable

<MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Class="revealing-container min-vh-50 py-16">
    @* Choice indicator with dramatic reveal *@
    <div class="choice-indicator @(Choice == "trap" ? "trap" : "value") @(_isAnimating ? "animate" : "")">
        <MudText Typo="Typo.h4" Class="choice-text">
            You said
            <span class="choice-word">
                @(Choice?.ToUpperInvariant())
            </span>
        </MudText>
    </div>

    @* Dramatic countdown/processing animation *@
    <div class="reveal-animation @(_isAnimating ? "animate" : "")">
        <div class="reveal-ring outer @(Choice == "trap" ? "trap" : "value")"></div>
        <div class="reveal-ring middle @(Choice == "trap" ? "trap" : "value")"></div>
        <div class="reveal-ring inner @(Choice == "trap" ? "trap" : "value")"></div>
        <div class="reveal-center">
            <MudIcon Icon="@(Choice == "trap" ? Icons.Material.Filled.TrendingDown : Icons.Material.Filled.TrendingUp)"
                     Color="@(Choice == "trap" ? Color.Error : Color.Success)"
                     Size="Size.Large"
                     Class="reveal-icon" />
        </div>
    </div>

    <MudText Typo="Typo.h6" Class="mt-6 reveal-text" Color="Color.Secondary">
        @_currentMessage
    </MudText>

    @* Dramatic dots animation *@
    <div class="processing-dots">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</MudStack>

@code {
    [Parameter]
    public string? Choice { get; set; }

    private bool _isAnimating = false;
    private string _currentMessage = "Checking the markets";
    private readonly string[] _messages = new[]
    {
        "Checking the markets",
        "Analyzing price movements",
        "Calculating 24-month return",
        "Preparing your verdict"
    };

    private int _currentMessageIndex = 0;
    private System.Threading.Timer? _messageTimer;

    protected override void OnInitialized()
    {
        _isAnimating = true;

        _messageTimer = new System.Threading.Timer(async _ =>
        {
            _currentMessageIndex = (_currentMessageIndex + 1) % _messages.Length;
            _currentMessage = _messages[_currentMessageIndex];
            await InvokeAsync(StateHasChanged);
        }, null, 800, 800);
    }

    public void Dispose()
    {
        _messageTimer?.Dispose();
    }
}

<style>
    .revealing-container {
        animation: fadeIn 0.3s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .min-vh-50 {
        min-height: 50vh;
    }

    /* Choice indicator */
    .choice-indicator {
        text-align: center;
        opacity: 0;
        transform: translateY(-20px);
    }

    .choice-indicator.animate {
        animation: slideDown 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    @@keyframes slideDown {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .choice-word {
        font-weight: 700;
        display: inline-block;
        margin-left: 8px;
    }

    .choice-indicator.trap .choice-word {
        color: var(--mud-palette-error);
        text-shadow: 0 0 20px rgba(248, 81, 73, 0.5);
    }

    .choice-indicator.value .choice-word {
        color: var(--mud-palette-success);
        text-shadow: 0 0 20px rgba(63, 185, 80, 0.5);
    }

    /* Reveal animation container */
    .reveal-animation {
        position: relative;
        width: 150px;
        height: 150px;
        margin: 32px 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Concentric rings */
    .reveal-ring {
        position: absolute;
        border-radius: 50%;
        border: 2px solid transparent;
        opacity: 0;
    }

    .reveal-ring.outer {
        width: 150px;
        height: 150px;
    }

    .reveal-ring.middle {
        width: 110px;
        height: 110px;
    }

    .reveal-ring.inner {
        width: 70px;
        height: 70px;
    }

    .reveal-ring.trap {
        border-color: var(--mud-palette-error);
    }

    .reveal-ring.value {
        border-color: var(--mud-palette-success);
    }

    .reveal-animation.animate .reveal-ring.outer {
        animation: ringPulse 1.5s ease-out infinite;
        animation-delay: 0s;
    }

    .reveal-animation.animate .reveal-ring.middle {
        animation: ringPulse 1.5s ease-out infinite;
        animation-delay: 0.2s;
    }

    .reveal-animation.animate .reveal-ring.inner {
        animation: ringPulse 1.5s ease-out infinite;
        animation-delay: 0.4s;
    }

    @@keyframes ringPulse {
        0% {
            transform: scale(0.8);
            opacity: 0;
        }
        30% {
            opacity: 0.8;
        }
        100% {
            transform: scale(1.3);
            opacity: 0;
        }
    }

    .reveal-center {
        position: relative;
        z-index: 10;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: var(--mud-palette-surface);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .reveal-icon {
        animation: iconBounce 0.8s ease-in-out infinite;
    }

    @@keyframes iconBounce {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.15);
        }
    }

    /* Reveal text */
    .reveal-text {
        animation: textPulse 1.5s ease-in-out infinite;
    }

    @@keyframes textPulse {
        0%, 100% {
            opacity: 0.7;
        }
        50% {
            opacity: 1;
        }
    }

    /* Processing dots */
    .processing-dots {
        display: flex;
        gap: 8px;
        margin-top: 16px;
    }

    .dot {
        width: 8px;
        height: 8px;
        background: var(--mud-palette-text-secondary);
        border-radius: 50%;
        animation: dotBounce 1.4s ease-in-out infinite;
    }

    .dot:nth-child(1) {
        animation-delay: 0s;
    }

    .dot:nth-child(2) {
        animation-delay: 0.2s;
    }

    .dot:nth-child(3) {
        animation-delay: 0.4s;
    }

    @@keyframes dotBounce {
        0%, 80%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }
        40% {
            transform: scale(1.3);
            opacity: 1;
        }
    }

    @@media (prefers-reduced-motion: reduce) {
        .revealing-container,
        .choice-indicator,
        .reveal-ring,
        .reveal-icon,
        .reveal-text,
        .dot {
            animation: none !important;
        }

        .choice-indicator {
            opacity: 1;
            transform: none;
        }

        .reveal-ring {
            opacity: 0.5;
            transform: none;
        }

        .dot {
            opacity: 1;
        }
    }
</style>
